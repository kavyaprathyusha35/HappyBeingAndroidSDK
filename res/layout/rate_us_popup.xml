    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/light_black_inside">

    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16sp"
        android:layout_marginRight="@dimen/dimen_16sp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:backgroundTint="@color/app_orange"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/dimen_8dp"
        android:maxHeight="250dp"
        android:minHeight="@dimen/edit_max"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textColor="@color/edit_text"
        android:textColorHint="@color/hint_text"
        android:textSize="@dimen/dimen_16dp"
        android:theme="@style/MyEditTextTheme"
        android:visibility="visible"
        android:translationY="8dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/button_button"
        android:maxHeight="38dp"
        android:maxWidth="88dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:text="SEND"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textSize="15dp" />


