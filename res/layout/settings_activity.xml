<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hb_background"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/did_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/CommonMarginStyle"
            android:fontFamily="sans-serif-light"
            android:text="Did you know?"
            android:textColor="@color/hb_orange_header"
            android:textSize="@dimen/dimen_20dp" />

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dimen_8dp"
            style="@style/CommonMarginStyle"
            android:fontFamily="sans-serif-light"
            android:text="85% percent of the people who have enrolled for 30 days program have successfully completed the course."
            android:textColor="@color/curated"
            android:textSize="@dimen/dimen_16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginLeft="@dimen/dimen_24dp"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:background="@color/color30" />


        <TextView
            android:id="@+id/tomorrow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/CommonMarginStyle"
            android:fontFamily="sans-serif-light"
            android:text="Will see you tomorrow at"
            android:textColor="@color/hb_orange_header"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/CommonMarginStyle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hour_tv"
                android:layout_width="wrap_content"
                android:text="08"
                android:layout_height="wrap_content"
                android:textColor="@color/curated"
                android:fontFamily="sans-serif-light"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:background="@drawable/settings_radius"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/curated"
                android:fontFamily="sans-serif-light"/>


            <TextView
                android:id="@+id/min_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/curated"
                android:fontFamily="sans-serif-light"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:background="@drawable/settings_radius"/>

            <TextView
                android:id="@+id/format_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AM"
                android:textAllCaps="true"
                android:textColor="@color/curated"
                android:fontFamily="sans-serif-light"
                android:minHeight="60dp"
                android:minWidth="60dp"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:background="@drawable/settings_radius"/>


        </LinearLayout>


        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/button_radius"
            android:fontFamily="sans-serif-regular"
            android:text="EDIT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16dp"
            android:textStyle="bold" />

    </LinearLayout>



</RelativeLayout>