<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#cce289"
    android:id="@+id/relative"
    android:padding="@dimen/dimen_20dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:text="How do you feel now?"
        android:textSize="27dp"
        android:id="@+id/text"
        android:textColor="@color/black"
        android:visibility="invisible"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Very Good"
        android:textSize="30dp"
        android:id="@+id/feelings"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_below="@+id/text"
        android:textColor="#80983E"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_centerInParent="true"
        android:id="@+id/feeling_image"
        android:layout_height="150dp"/>


    <SeekBar
        android:layout_width="match_parent"
        android:layout_above="@+id/done_button_n"
        android:thumb="@drawable/custom_thumb"
        android:progress="100"
        android:id="@+id/seekbar"
        android:progressDrawable="@drawable/seekbar_progress"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:layout_height="wrap_content"/>


    <Button
        android:paddingLeft="@dimen/dimen_40dp"
        android:paddingRight="@dimen/dimen_40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:id="@+id/done_button_n"
        android:text="SAVE"
        android:fontFamily="@font/opensans_extrabold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:background="@drawable/save_button"/>


</RelativeLayout>